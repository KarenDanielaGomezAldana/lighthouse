pipeline {
    agent { dockerfile true }
    stages {
        stage('Test') {
            steps {
                sh 'node --version'
            }
        }
        stage('Generar reporte performance'){
            steps{
                sh 'lighthouse-ci https://www.ciencuadras.com --jsonReport --report=.'
                lighthouseReport file: './report.json', name: 'My Report'
            }
        }
    }
}
